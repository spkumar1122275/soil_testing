<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layoutDilutions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"
            app:background="@{``}">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#fff"
                android:textSize="30sp"
                tools:text="Contaminant" />

            <TextView
                android:id="@+id/textDilution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:paddingBottom="20dp"
                android:textColor="#d6f6fdf6"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="@string/no_dilution" />

            <TextView
                android:id="@+id/textSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_dilution"
                android:textColor="#d6f6fdf6"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonNoDilution"
            style="@style/Button"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:minHeight="70dp"
            android:minWidth="260dp"
            android:text="@string/no_dilution"
            android:theme="?secondaryButtonStyle" />

        <Button
            android:id="@+id/buttonDilution1"
            style="@style/Button"
            android:layout_marginBottom="10dp"
            android:minHeight="70dp"
            android:minWidth="260dp"
            android:text="@string/times_dilution"
            android:theme="?secondaryButtonStyle" />

        <Button
            android:id="@+id/buttonDilution2"
            style="@style/Button"
            android:layout_marginBottom="10dp"
            android:minHeight="70dp"
            android:minWidth="260dp"
            android:text="@string/times_dilution"
            android:theme="?secondaryButtonStyle" />

        <Button
            android:id="@+id/buttonCustomDilution"
            style="@style/Button"
            android:minHeight="70dp"
            android:minWidth="260dp"
            android:text="@string/custom_dilution"
            android:theme="?secondaryButtonStyle" />

    </LinearLayout>

</layout>

